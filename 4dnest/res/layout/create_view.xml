<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
 >
     <RelativeLayout
    android:id="@+id/create_screen_navigation_bar"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    >
    	<TextView
       		android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="@string/create_screen_read_tag"
        	android:textSize="15dp"
        	android:layout_alignParentLeft="true"
  		/>e
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_screen_create_tag"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        />
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_screen_stored_eggs_tag"
        android:textSize="15dp"
        android:layout_alignParentRight="true"
        />
        
    </RelativeLayout>
    <LinearLayout
    android:id="@+id/create_screen_text_margin"
    android:layout_width="fill_parent"
    android:layout_height="2px"
    android:orientation="vertical"
    android:background="#000000"
    android:layout_below="@+id/create_screen_navigation_bar"
    />
    <RelativeLayout
     android:layout_marginTop="5px"
    android:id="@+id/create_screen_upper_buttons"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="#ffffff"
    android:layout_below="@+id/create_screen_text_margin"
    >
         <ImageButton
            android:id="@+id/create_firstButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:src="@drawable/icon" 
			android:layout_marginRight="10px"/>
         
        <ImageButton
            android:id="@+id/create_secondButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/create_firstButton"
			android:src="@drawable/icon"
			android:layout_marginLeft="10px"
			/>       
     </RelativeLayout> 
 <RelativeLayout
    android:id="@+id/create_screen_lower_buttons"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="#ffffff"
    android:layout_below="@+id/create_screen_upper_buttons"
    >
        <ImageButton
            android:id="@+id/create_thirdButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:src="@drawable/icon" 
			android:layout_marginRight="10px"/>
        <ImageButton
            android:id="@+id/create_fourthButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/create_thirdButton"
			android:src="@drawable/icon" 
			android:layout_marginLeft="10px"/>
    </RelativeLayout>
    <Button
        android:id="@+id/openGalleryButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_screen_open_gallery_tag" 
        android:layout_above="@+id/create_view_bottom_items"/>
     <LinearLayout
    android:orientation="horizontal"
    android:id="@+id/create_view_bottom_items"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:layout_alignParentBottom="true"
    android:background="#FFFFFF"
    >
        <ToggleButton
            android:id="@+id/create_fifthButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_weight="0.8" 
			android:textOn="@string/create_screen_track_route_tag"
			android:textOff="@string/create_screen_track_route_tag"/>
        <Button
            android:id="@+id/create_sixthButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_weight="1"
		 android:text="Dummy Text"/>
    </LinearLayout>
</RelativeLayout>